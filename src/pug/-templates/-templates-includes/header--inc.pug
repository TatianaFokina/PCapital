header.navbar.flex-column.flex-md-row.navbar-light
	.container-fluid.header-container
		a(href="#").navbar-brand
			img(src="imgs/logo.png" alt="logo")
		nav.nav
			ul.navbar-nav.flex-row
				+nav-item("#", "Dashboard", "nav-link active")
				+nav-item("#", "Deposit", "nav-link")
				+nav-item("#", "Transfer", "nav-link")
				+nav-item("#", "Exchange", "nav-link")
				+nav-item("#", "Withdraw", "nav-link")
		ul.navbar-nav.flex-row.ml-md-auto.d-md-flex.navbar-icons
			li.nav-item
				a(href="#" title="Account").nav-ico.nav-ico--account
			li.nav-item
				a(href="#" title="Log out").nav-ico.nav-ico--out
			li.nav-item
				a(href="#" title="Language").nav-ico.nav-ico--lang